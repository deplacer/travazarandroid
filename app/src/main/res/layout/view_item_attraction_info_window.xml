<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="110dp">

    <ImageView
        android:id="@+id/image_attraction_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/dummy_image_preview" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/margin_small"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_attraction_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/text_primary_light"
            android:textSize="@dimen/title"
            android:textStyle="bold"
            tools:text="Attraction Name" />

        <TextView
            android:id="@+id/text_attraction_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/text_primary_light"
            tools:text="Bohol, Philippines" />

        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/attraction_rating_bar"
            style="@style/Base.Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:rating="4" />

        <TextView
            android:id="@+id/text_attraction_total_reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/text_primary_light"
            tools:text="1,230 reviews" />
    </LinearLayout>
</android.support.v7.widget.CardView>