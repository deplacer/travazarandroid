<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.travazar.tour.packages">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".TravazarApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".ui.splash.SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".ui.attraction.AttractionListActivity"
            android:label="@string/title_attractions" />
        <activity
            android:name=".ui.attraction.details.AttractionDetailsActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar.TransparentStatusBar" />
        <activity
            android:name=".ui.tourpackage.TourPackageListActivity"
            android:label="@string/title_tour_packages" />
        <activity
            android:name=".ui.tourpackage.details.TourPackageDetailsActivity"
            android:label="" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

</manifest>